- extends "layout.haml"

- block content
  .main.bg-light-gray
    .container
      .row
        .col-md-6.col-md-offset-3
          - if form.errors
            .alert.alert-warning
              = form.errors
          .panel.panel-default
            .panel-body
              %form{method: "post", action: "."}
                - csrf_token
                %legend Change Password
                .form-group
                  %input.form-control{type: "password", name: "password1", placeholder: "New Password"}
                .form-group
                  %input.form-control{type: "password", name: "password2", placeholder: "New Password (Confirm)"}
                .form-group
                  %input.btn.btn-success.form-control{type: "submit", value: "Change my password"}
                  %div.help-block
                    Please note that you will be asked to log into the website again.
