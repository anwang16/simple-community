- extends "layout.haml"

- block content
  .main.bg-light-gray
    .container
      .row
        .col-md-6.col-md-offset-3
          - if form.errors
            .alert.alert-warning
              = form.errors
          .panel.panel-default
            .panel-body
              %form{method: "post", action: "{% url 'account_change_password' %}"}
                - csrf_token
                %legend Reset Password
                %p Enter in your account's email address and we'll send you instructions to reset it.
                .form-group
                  %input.form-control{type: "email", name: "email", placeholder: "Email Address"}
                .form-group
                  %input.btn.btn-success.form-control{type: "submit", value: "Reset my password"}
                  %div.help-block
